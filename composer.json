{
    "name": "home-harmony/project",
    "description": "Home Harmony - Task Management Application",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "format": "php-cs-fixer fix",
        "format-check": "php-cs-fixer fix --dry-run --diff"
    },
    "require-dev": {
        "filp/whoops": "^2.18",
        "friendsofphp/php-cs-fixer": "^3.92"
    }
}
