{
    "name": "home-harmony/project",
    "description": "Home Harmony - Task Management Application",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "format": "php-cs-fixer fix",
        "format-check": "php-cs-fixer fix --dry-run --diff",
        "phpstan": "phpstan analyze",
        "phpmd": "phpmd app text phpmd.xml",
        "test": "phpunit"
    },
    "require-dev": {
        "filp/whoops": "^2.18",
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5",
        "phpmd/phpmd": "^2.15"
    }
}
